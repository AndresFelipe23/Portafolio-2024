---

<section id="sobre-mi" class="max-w-4xl mx-auto p-8">
  <h2 class="text-4xl font-bold mb-12 text-center text-gray-800">Trayectoria Educativa</h2>
  <div class="relative">
    {estudios.map((estudio, index) => (
      <div class="mb-8 flex justify-between items-center w-full right-timeline">
        <div class="order-1 w-5/12"></div>
        <div class={`order-1 w-3/12 px-1 py-4 text-right ${index !== estudios.length - 1 ? 'border-r-4' : ''} ${estudio.color}`}>
          <p class="mb-3 text-base text-white">{estudio.año}</p>
        </div>
        <div class="order-1 w-5/12 px-6 py-4">
          <h3 class="mb-3 font-bold text-gray-800 text-xl">{estudio.titulo}</h3>
          <p class="text-sm font-medium text-gray-600 mb-2">{estudio.institucion}</p>
          <p class="text-sm leading-snug tracking-wide text-gray-600 text-opacity-100">{estudio.descripcion}</p>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .right-timeline:nth-child(odd) {
    flex-direction: row-reverse;
  }
  .right-timeline:nth-child(odd) .order-1:nth-child(1) {
    @apply text-left px-6;
  }
  .right-timeline:nth-child(odd) .order-1:nth-child(2) {
    @apply text-left border-l-4 border-r-0;
  }
  .right-timeline:nth-child(odd) .order-1:nth-child(3) {
    @apply px-0;
  }
</style>