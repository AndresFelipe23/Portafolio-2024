---
import { Icon } from 'astro-icon/components'

const estudios = [
  {
    año: '2024',
    titulo: 'Licenciatura en Informática',
    institucion: 'Universidad de Córdoba',
    descripcion: 'Estudios de Licenciatura en Informática.',
    icon: 'graduation-cap',
    color: 'from-emerald-500 to-emerald-700'
  },
  {
    año: '2022',
    titulo: 'Crea una tienda online profesional, Ecommerce con MEAN STACK',
    institucion: 'Udemy',
    descripcion: 'Curso de desarrollo web con MEAN Stack.',
    icon: 'shopping-cart',
    color: 'from-indigo-500 to-indigo-700'
  },
  {
    año: '2022',
    titulo: 'Aprende ASP.NET Core MVC 6 Haciendo Proyectos Desde Cero',
    institucion: 'Udemy',
    descripcion: 'Curso de desarrollo web con ASP.NET Core MVC 6.',
    icon: 'code',
    color: 'from-blue-500 to-blue-700'
  },
  {
    año: '2020',
    titulo: 'Crea una APP Red Social con Chat estilo WHATSAPP con Android',
    institucion: 'Udemy',
    descripcion: 'Curso de desarrollo de aplicaciones Android con Java.',
    icon: 'smartphone',
    color: 'from-purple-500 to-purple-700'
  },
  {
    año: '2018',
    titulo: 'Técnico en sistemas',
    institucion: 'SENA',
    descripcion: 'Técnico en sistemas y redes de computadores.',
    icon: 'server',
    color: 'from-pink-500 to-pink-700'
  },
  {
    año: '2018',
    titulo: 'Bachiller',
    institucion: 'I.E. Antonia Santos',
    descripcion: 'IE Pública',
    icon: 'school',
    color: 'from-yellow-500 to-yellow-700'
  }
];
---

<section id="sobre-mi" class="max-w-4xl mx-auto p-8">
  <h2 class="text-4xl font-bold mb-12 text-center text-gray-800">Trayectoria Educativa</h2>
  <div class="relative">
    <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gray-200"></div>
    {estudios.map((estudio, index) => (
      <div class="mb-8 flex justify-between items-center w-full">
        <div class={`z-20 flex items-center order-1 ${index % 2 === 0 ? 'md:order-1' : 'md:order-2'} w-full md:w-5/12`}>
          <div class={`w-full p-4 bg-white rounded-lg shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 border-l-4 bg-gradient-to-br ${estudio.color}`}>
            <div class="flex items-center mb-2">
              <Icon name={`lucide:${estudio.icon}`} class="w-6 h-6 mr-2 text-white" />
              <h3 class="font-bold text-lg text-white">{estudio.titulo}</h3>
            </div>
            <p class="text-sm font-medium text-gray-100 mb-1">{estudio.institucion}</p>
            <p class="text-sm text-gray-200">{estudio.descripcion}</p>
          </div>
        </div>
        <div class="z-20 flex items-center order-2 bg-gray-800 shadow-md w-8 h-8 rounded-full">
          <h1 class="mx-auto font-semibold text-xs text-white">{estudio.año}</h1>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .mb-8 {
    animation: fadeIn 0.5s ease-out forwards;
    opacity: 0;
  }

  .mb-8:nth-child(1) { animation-delay: 0.1s; }
  .mb-8:nth-child(2) { animation-delay: 0.2s; }
  .mb-8:nth-child(3) { animation-delay: 0.3s; }
  .mb-8:nth-child(4) { animation-delay: 0.4s; }
  .mb-8:nth-child(5) { animation-delay: 0.5s; }
  .mb-8:nth-child(6) { animation-delay: 0.6s; }
</style>