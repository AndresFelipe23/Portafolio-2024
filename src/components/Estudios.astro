  {
    año: '2024',
    titulo: 'Licenciatura en Infromática',
    institucion: 'Universidad de Cordoba',
    descripcion: 'Estudios de Licenciatura en Informática.',
    color: 'bg-emerald-500'
  },
  {
    año: '2022',
    titulo: 'Crea una tienda online profesional, Ecommerce con MEAN STACK',
    institucion: 'Udemy',
    descripcion: 'Curso de desarrollo web con MEAN Stack.',
    color: 'bg-indigo-500'
  },
  {
    año: '2022',
    titulo: 'Aprende ASP.NET Core MVC 6 Haciendo Proyectos Desde Cero',
    institucion: 'Udemy',
    descripcion: 'Curso de desarrollo web con ASP.NET Core MVC 6.',
    color: 'bg-emerald-500'
  },
  {
    año: '2020',
    titulo: 'Crea una APP Red Social con Chat estilo WHATSAPP con Android',
    institucion: 'Udemy',
    descripcion: 'Curso de desarrollo de aplicaciones Android con Java.',
    color: 'bg-blue-500'
  },
  {
    año: '2018',
    titulo: 'Tecnico en sistemas',
    institucion: 'SENA',
    descripcion: 'Tecnico en sistemas y redes de computadores.',
    color: 'bg-purple-500'
  },
  {
    año: '2018',
    titulo: 'Bachiller',
    institucion: 'I.E. Antonia Santos',
    descripcion: 'IE Publica',
    color: 'bg-indigo-500'
  }
