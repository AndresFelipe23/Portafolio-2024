---
import { Icon } from 'astro-icon/components'

interface Technology {
  name: string;
  icon: string;
  color: string;
}

const technologies: Technology[] = [
  { name: "C#", icon: "simple-icons:csharp", color: "hover:text-purple-600" },
  { name: ".NET", icon: "simple-icons:dotnet", color: "hover:text-blue-600" },
  { name: "SQL Server", icon: "simple-icons:microsoftsqlserver", color: "hover:text-red-600" },
  { name: "Firebase", icon: "simple-icons:firebase", color: "hover:text-yellow-600" },
  { name: "Astro", icon: "simple-icons:astro", color: "hover:text-orange-600" },
  { name: "Tailwind CSS", icon: "simple-icons:tailwindcss", color: "hover:text-cyan-600" }
];

const socialLinks = [
  { name: "GitHub", icon: "simple-icons:github", url: "https://github.com/tuusuario" },
  { name: "LinkedIn", icon: "simple-icons:linkedin", url: "https://linkedin.com/in/tuusuario" },
  { name: "Twitter", icon: "simple-icons:twitter", url: "https://twitter.com/tuusuario" }
];
---

<section id="inicio" class="relative min-h-screen bg-white overflow-hidden">
  <div class="relative flex flex-col items-center justify-center min-h-screen px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Nuevo diseño de la foto -->
      <div class="relative mb-8 inline-block">
        <!-- Marco exterior decorativo -->
        <div class="absolute -inset-4 bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 rounded-lg opacity-75 blur-lg animate-pulse"></div>
        
        <!-- Contenedor hexagonal -->
        <div class="relative group">
          <!-- Borde con efecto -->
          <div class="absolute inset-0 bg-gradient-to-r from-purple-500 via-pink-500 to-blue-500 rounded-2xl opacity-75 group-hover:opacity-100 transition-opacity duration-300"></div>
          
          <!-- Contenedor de la imagen con clip-path -->
          <div class="relative p-1 bg-white rounded-2xl overflow-hidden transform transition-transform duration-500 group-hover:scale-105">
            <div class="w-40 h-40 sm:w-48 sm:h-48 relative overflow-hidden rounded-xl">
              <img 
                src="/images/3.jpg" 
                alt="Andres Espitia" 
                class="w-full h-full object-cover transform transition-transform duration-500 group-hover:scale-110"
              >
              <!-- Overlay con efecto hover -->
              <div class="absolute inset-0 bg-gradient-to-t from-purple-900/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
          </div>
          
          <!-- Detalles decorativos -->
          <div class="absolute -top-2 -right-2 w-4 h-4 bg-purple-500 rounded-full blur-sm animate-pulse"></div>
          <div class="absolute -bottom-2 -left-2 w-4 h-4 bg-pink-500 rounded-full blur-sm animate-pulse"></div>
        </div>
      </div>
      
      <!-- Contenido de texto -->
      <div class="space-y-4 mb-8">
        <h1 class="text-4xl sm:text-5xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-purple-600 to-blue-600">
          ¡Hola, soy Andres Espitia!
        </h1>
        <p class="text-xl sm:text-2xl text-gray-600 leading-relaxed">
          Desarrollador apasionado por la tecnología y la innovación.
        </p>
      </div>
      
      <!-- Tecnologías -->
      <div class="flex justify-center flex-wrap gap-4 mb-8">
        {technologies.map(tech => (
          <div class={`group flex items-center gap-2 bg-gray-50 px-4 py-2 rounded-full transition-all duration-300 hover:scale-105 ${tech.color} cursor-pointer border border-gray-200 hover:border-gray-300 hover:shadow-md`}>
            <Icon name={tech.icon} class="w-5 h-5 text-gray-600" />
            <span class="text-sm font-medium text-gray-700">{tech.name}</span>
          </div>
        ))}
      </div>

      <!-- Links sociales -->
      <div class="flex justify-center gap-6 mt-8">
        {socialLinks.map(social => (
          <a 
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-gray-600 transition-colors duration-300"
          >
            <Icon name={social.icon} class="w-6 h-6" />
            <span class="sr-only">{social.name}</span>
          </a>
        ))}
      </div>

      <!-- CTA Button -->
      <div class="mt-12">
        <a 
          href="#contacto" 
          class="inline-flex items-center px-6 py-3 rounded-full bg-gradient-to-r from-purple-600 to-blue-600 text-white font-medium transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-blue-500/25"
        >
          Contáctame
          <Icon name="mdi:arrow-right" class="w-5 h-5 ml-2" />
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes tilt {
    0%, 50%, 100% {
      transform: rotate(0deg);
    }
    25% {
      transform: rotate(1deg);
    }
    75% {
      transform: rotate(-1deg);
    }
  }

  .animate-tilt {
    animation: tilt 10s infinite linear;
  }
</style>