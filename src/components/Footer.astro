---
// Footer.astro
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: 'GitHub',
    url: 'https://github.com/',
    icon: `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>`,
  },
  {
    name: 'LinkedIn',
    url: 'https://linkedin.com/',
    icon: `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd" />
          </svg>`,
  },
  {
    name: 'Twitter',
    url: 'https://twitter.com/',
    icon: `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
          </svg>`,
  }
];

const footerLinks = [
  {
    title: 'Navegación',
    links: [
      { name: 'Inicio', href: '/' },
      { name: 'Proyectos', href: '/proyectos' },
      { name: 'Sobre mí', href: '/sobre-mi' },
      { name: 'Contacto', href: '/contacto' },
    ]
  },
  {
    title: 'Recursos',
    links: [
      { name: 'Blog', href: '/blog' },
      { name: 'Newsletter', href: '/newsletter' },
      { name: 'RSS', href: '/rss.xml' },
    ]
  },
  {
    title: 'Legal',
    links: [
      { name: 'Política de privacidad', href: '/privacidad' },
      { name: 'Términos y condiciones', href: '/terminos' },
    ]
  }
];
---

<footer class="bg-gray-900 text-gray-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Sección del logo y descripción -->
      <div class="col-span-1">
        <h2 class="text-2xl font-bold text-white">
          Portfolio<span class="text-blue-500">.</span>
        </h2>
        <p class="mt-4 text-gray-400">
          Desarrollador web apasionado por crear experiencias digitales increíbles y soluciones innovadoras.
        </p>
        <!-- Redes sociales -->
        <div class="flex space-x-4 mt-6">
          {socialLinks.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors duration-300"
              aria-label={social.name}
            >
              <Fragment set:html={social.icon} />
            </a>
          ))}
        </div>
      </div>

      <!-- Enlaces del footer -->
      {footerLinks.map((section) => (
        <div>
          <h3 class="text-white font-semibold mb-4">
            {section.title}
          </h3>
          <ul class="space-y-2">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-white transition-colors duration-300"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Línea divisoria -->
    <div class="border-t border-gray-800 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm">
          © {currentYear} AFES. Todos los derechos reservados.
        </p>
        <div class="mt-4 md:mt-0">
          <p class="text-gray-400 text-sm">
            Hecho con ❤️ usando <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:text-blue-400">Astro</a> y 
            <a href="https://tailwindcss.com" target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:text-blue-400">Tailwind CSS</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>